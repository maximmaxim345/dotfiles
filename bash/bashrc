# Bashrc Configuration

# Define directories to add to PATH
directories=(
    "/usr/local/bin"
    "$HOME/.local/bin"
    "$HOME/.cargo/bin"
    "$HOME/.local/share/bob/nvim-bin" # Add nvim to path (with highest priority)
)

# Add directories to PATH if they exist
for dir in "${directories[@]}"; do
    [[ -d "$dir" ]] && PATH="$dir:$PATH"
done

# Initialize Starship, a cross-shell prompt
if command -v starship &>/dev/null; then
    eval "$(starship init bash)"
fi

# Add brew to path
if [[ -x "/home/linuxbrew/.linuxbrew/bin/brew" ]]; then
    eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"
fi

# Kitty specific tweaks/aliases
if [[ $TERM == "xterm-kitty" ]]; then
    alias ssh="kitten ssh"
    alias klight="kitten themes --reload-in=all 'Atom One Light'"
    alias kdark="kitten themes --reload-in=all 'Base2Tone Drawbridge Dark'"
fi

# Export environment variables
export PATH
export npm_config_prefix="$HOME/.local"
export NEOVIDE_MULTIGRID=1

# Source local bashrc if it exists
[[ -f ~/.bashrc.local ]] && source ~/.bashrc.local

# Define aliases for common commands
alias de="distrobox-enter"
alias d="distrobox"
alias n="nvim"
alias nv="neovide"
alias lg="lazygit"
alias ls='ls --color=auto'
alias ll='ls --color=auto -alh'

# VSCode alias
if command -v code &>/dev/null; then
    c() {
        if [[ "$(uname)" == "Linux" ]]; then
            code --ozone-platform=wayland "${@:-.}"
        else
            code "${@:-.}"
        fi
    }
fi

# gw wrapper - auto-cd after new/rm/cd
if command -v gw &>/dev/null; then
    gw() {
        local tmpfile
        tmpfile=$(mktemp)

        # Run command with output to both terminal and file
        command gw "$@" 2>&1 | tee "$tmpfile"

        # Check for "Run: cd ..." in output
        local cd_path
        cd_path=$(grep -o "Run: cd .*" "$tmpfile" | tail -1 | sed 's/^Run: cd //')
        rm -f "$tmpfile"

        if [[ -n "$cd_path" ]]; then
            cd "$cd_path" && echo "â†’ Changed to $(pwd)"
        fi
    }
fi

# Use zoxide if possible
if command -v zoxide &>/dev/null; then
    eval "$(zoxide init bash)"
fi

# Configure history
HISTFILE=~/.bash_history
HISTSIZE=10000
HISTFILESIZE=10000
HISTCONTROL=ignoreboth:erasedups

# Configure key bindings
if [[ $- = *i* ]]; then
    bind 'TAB:menu-complete'
    bind '"\e[Z":menu-complete-backward'
fi
